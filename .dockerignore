node_modules/
__pycache__/
*.pyc
.venv/
venv/
.pytest_cache/

# Build outputs (will be rebuilt in container)
dist/
build/
*.egg-info/

# Version Control
.git/
.gitignore
.gitattributes

# Development and Environment files
.env
.env.*
!.env.example

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~

# Test files
coverage/
.nyc_output/
tests/
python_app/tests/
htmlcov/
.coverage

